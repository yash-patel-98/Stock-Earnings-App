<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:menu="@menu/top_app_bar_menu"
            app:navigationIcon="@drawable/menu_icon_36"
            app:title="@string/my_portfolio"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            app:titleTextColor="@color/pureBlack" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/textView_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/roboto_condensed_bold"
            android:padding="4dp"
            android:text="@string/profit"
            android:textColor="@color/pureBlack"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/profit_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="16dp"
            android:text="@string/sample_profit_value"
            android:textColor="@color/pureBlack"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="48dp"
        android:id="@+id/market_status"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView_LinearLayout">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:layout_margin="4dp"
                android:textColor="@color/pureBlack"
                android:text="@string/BSE_Sensex_Current_Points" />

            <TextView
                android:id="@+id/BSE_Current_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="11dp"
                android:fontFamily="@font/roboto"
                android:text="30102.20"
                android:textColor="@color/pureBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/BSE_Value_Change"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:fontFamily="@font/roboto"
                android:text="+3020.20"
                android:padding="14dp" />
        </LinearLayout>

